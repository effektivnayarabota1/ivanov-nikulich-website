<fieldset id="{{this.slug}}" class="element-container header_fieldset">
  <div class="header_abs-container" >
	<div class="id-container" >
  		<input type="text" name="element-slug" readonly value="{{this.slug}}" />
		{{> ui/button_small text="✕" class="remove-element"}}
	</div>
	<div class="move-container" >
  		<button id="{{this.slug}}" class="up-element">Вверх</button>
  		<button id="{{this.slug}}" class="down-element">Вниз</button>
	</div>
  </div>

  <div id="header_bcg-container">
	  {{> ui/input_file image=this.img name="header" elemSlug=this.slug}}
  </div>
</fieldset>
