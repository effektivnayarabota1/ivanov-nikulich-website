<div id="{{this.id}}" class="element-container client dynamic_element">
  <div class="element_abs-container">
    <div class="element_text-container mono">
      <h1><a href="admin/{{this.id}}">{{this.title}}</a></h1>
	  {{#if this.desc}}
      	<p>{{this.desc}}</p>
	  {{/if}}
    </div>

	{{#if @partial-block}}
    	<div class="element_control-container">
			{{> @partial-block }}
    	</div>
	{{/if}}
  </div>

  <div
    id="{{this.id}}"
    class="element_img-container border"
    style="border-color: {{this.color.current}}"
  >
	{{> (image . 'thumbnail')}}
  </div>
</div>
