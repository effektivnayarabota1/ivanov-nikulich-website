<header class="header">
  <div class="header_title">
	  <div class="header_letter-container" style="color: {{this.color.current}}" >
	  	{{#letters this.title}}
	  	{{/letters}}
	  </div>
  </div>

<div class="header_control-container menu-wrapper wrapper grid-main">
	{{#if @partial-block}}
		{{> @partial-block }}
	{{/if}}
</div>

  <div class="header_bcg-container">
    {{#each elements}}
      {{#if (is-image this.img)}}
        <div class="header_bcg-image">
          <img src={{base64 this.img}} alt="header background" />
        </div>
      {{/if}}
    {{/each}}
  </div>
</header>
