{{> form_meta page}}

<div class="blocks">
	{{#each page.blocks}}
		<div class="menu-wrapper wrapper" >
    		<div class="block_control-container grid-main">
				{{> ui/options_block this}}
    		</div>
			{{> (block . this) }}
		</div>
	{{/each}}
</div>

<div class="page_buttons grid-main menu-wrapper wrapper" >
	<div class="block-create_container" >
		{{>ui/button_big class="block-create image" text="Изображине"}}
		{{>ui/button_big class="block-create text" text="Текст"}}
		{{>ui/button_big class="block-create gallery" text="Галлерея"}}
	</div>
	<div>
		{{>ui/button_big class="block-reorder" text="Reorder"}}
	</div>
</div>

<script type="module" src="/script/block-create.js"></script>
