<form
  action="/admin/{{slug}}"
  method="POST"
  enctype="multipart/form-data"
  id="form"
>
  <!-- <form> -->
  <fieldset id="fieldset">
    <legend>Мета-информация</legend>

    <label for="title">title</label>
    <input type="text" name="title" placeholder="Заголовок" value="{{title}}" />
    <br /><br />

    <label for="desc">desc</label>
    <textarea name="desc" form="form" placeholder="Описание">{{desc}}</textarea>
    <br /><br />

    <label for="cover">cover</label>
    <input type="file" id="cover" name="cover" accept="image/*" />
  </fieldset>
  <hr />

  <span>
    <a href="image/{{slug}}">Изображение</a>
    <a href="text/{{slug}}">Текст</a>
    <a href="gallery/{{slug}}">Галлерея</a>
  </span>
  <hr />

  <button type="submit" form="form" value="Submit">Сохранить</button>
  <!-- <button id="saveBttn">Сохранить</button> -->
  <button id="deleteBttn">Удалить</button>

</form>

<script src="/script/constructor.js"></script>
