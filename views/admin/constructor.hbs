<a href="/admin">Назад</a>
<hr />
<form
  action="/admin/{{slug}}"
  method="POST"
  enctype="multipart/form-data"
  id="form"
>
  <!-- <form> -->
  <fieldset id="fieldset">
    <legend>Мета-информация</legend>

    <label for="title">title</label>
    <input type="text" name="title" placeholder="Заголовок" value="{{title}}" />
    <br /><br />

    <label for="desc">desc</label>
    <textarea name="desc" form="form" placeholder="Описание">{{desc}}</textarea>
    <br /><br />

    <label for="cover">cover</label>
    <input type="file" id="cover" name="cover" accept="image/*" />
  </fieldset>
  <hr />

  <div>
    {{#each blocks}}
      <fieldset>
        <legend><a
            href="/admin/{{this.pageSlug}}/{{this.slug}}"
          >{{this.title}}</a></legend>
        {{#each this.elements}}
          <p>{{this.desc}}</p>
        {{/each}}
      </fieldset>
      <hr />
    {{/each}}
  </div>

  <span>
    <a href="{{slug}}/image/constructor">Изображение</a>
    <a href="{{slug}}/text/constructor">Текст</a>
    <a href="{{slug}}/gallery/constructor">Галлерея</a>
  </span>
  <hr />

  <button type="submit" form="form" value="Submit">Сохранить</button>
  <!-- <button id="saveBttn">Сохранить</button> -->
  <button id="deleteBttn">Удалить</button>

</form>

<script src="/script/constructor.js"></script>
