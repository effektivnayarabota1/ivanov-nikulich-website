<form
	{{#if item.title}}
	action="/admin/update-page/{{item.slug}}"
	{{else}}
	action="/admin/create-page"
	{{/if}}
	method="POST"
	enctype="multipart/form-data"
	id="create"
>
	<fieldset>
		<legend>Мета</legend>
		<p>New Title</p><br>
		<input
			type="text"
			name="title"
			placeholder="title"
			{{#if item.title}}
			value={{preview item.title}}
			{{/if}}
			required
		/>
		<p>New Desc</p><br>
		<textarea
			name="desc"
			form="create"
			placeholder="desc"
			/* required */
		>{{#if item.desc}}{{preview item.desc}}{{/if}}</textarea>
		<p>New Cover</p><br>
		<input 
		type="file" 
		name="cover" 
		accept="image/*"
		{{#unless item.img}}
		required
		{{/unless}} 
		/>
		{{#if item.img}}
		<img src={{base64 item.img}} alt="" />
		{{/if}}
	</fieldset>
	<div>
	<button>Изображение</button>
	<button>Текст</button>
	<button>Галлерея</button>
	</div>
	<input type="submit" value="Сохранить" />
</form>
